{
  "name": "auth-module",
  "version": "0.0.1",
  "description": "",
  "author": "Damilare Anjorin",
  "private": true,
  "license": "UNLICENSED",
  "packageManager": "pnpm@8.12.0",
  "engines": {
    "node": ">=18"
  },
  "scripts": {
    "build": "nest build",
    "format": "prettier --write --cache \"src/**/*.ts\" \"test/**/*.ts\"",
    "format:check": "prettier --check --cache \"src/**/*.ts\" \"test/**/*.ts\"",
    "start": "nest start",
    "dev": "pnpm start:dev",
    "start:dev": "nest start --watch",
    "start:debug": "nest start --debug --watch",
    "start:prod": "node dist/main",
    "lint": "eslint \"{src,apps,libs,test}/**/*.ts\" --cache",
    "lint:fix": "eslint \"{src,apps,libs,test}/**/*.ts\" --fix --cache",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:cov": "vitest run --coverage",
    "test:debug": "vitest --inspect-brk --inspect --logHeapUsage --threads=false",
    "test:e2e": "vitest run --config ./vitest.config.e2e.ts",
    "db:deploy": "npx prisma migrate deploy",
    "db:migrate": "npx prisma migrate dev",
    "db:seed": "npx prisma db seed",
    "db:studio": "npx prisma studio",
    "db:generate-schemas": "prisma generate && prisma format",
    "postinstall": "simple-git-hooks && pnpm db:generate-schemas"
  },
  "dependencies": {
    "@nestjs/common": "^10.0.5",
    "@nestjs/core": "^10.0.5",
    "@nestjs/event-emitter": "^2.0.0",
    "@nestjs/jwt": "^10.1.0",
    "@nestjs/passport": "^10.0.0",
    "@nestjs/platform-express": "^10.0.5",
    "@nestjs/swagger": "^7.1.1",
    "@nestjs/terminus": "^10.0.1",
    "@nestjs/throttler": "^5.0.0",
    "@prisma/client": "^5.0.0",
    "bcrypt": "^5.1.0",
    "body-parser": "^1.20.2",
    "class-transformer": "^0.5.1",
    "class-validator": "^0.14.0",
    "compression": "^1.7.4",
    "dayjs": "^1.11.9",
    "helmet": "^7.0.0",
    "ioredis": "^5.3.2",
    "jsonwebtoken": "^9.0.1",
    "passport": "^0.7.0",
    "passport-jwt": "^4.0.1",
    "reflect-metadata": "^0.2.0",
    "rxjs": "^7.8.1",
    "zod": "^3.21.4"
  },
  "devDependencies": {
    "@damilaredev/eslint-config": "^0.0.19",
    "@nestjs/cli": "^10.1.8",
    "@nestjs/schematics": "^10.0.0",
    "@nestjs/testing": "^10.0.5",
    "@prisma/generator-helper": "^5.0.0",
    "@swc/cli": "^0.1.62",
    "@swc/core": "^1.3.69",
    "@swc/jest": "^0.2.27",
    "@types/express": "^4.17.17",
    "@types/jest": "^29.5.3",
    "@types/node": "^20.4.2",
    "@types/passport-jwt": "^3.0.9",
    "@types/supertest": "^2.0.12",
    "@typescript-eslint/eslint-plugin": "^6.1.0",
    "@typescript-eslint/parser": "^6.1.0",
    "@vitest/coverage-v8": "^0.34.0",
    "eslint": "^8.45.0",
    "eslint-config-prettier": "^9.0.0",
    "eslint-plugin-prettier": "^5.0.0",
    "fs-extra": "^11.1.1",
    "jest": "^29.6.1",
    "lint-staged": "^15.0.0",
    "prettier": "^3.0.0",
    "prisma": "^5.0.0",
    "simple-git-hooks": "^2.8.1",
    "source-map-support": "^0.5.21",
    "supertest": "^6.3.3",
    "ts-jest": "^29.1.1",
    "ts-loader": "^9.4.4",
    "ts-node": "^10.9.1",
    "tsconfig-paths": "^4.2.0",
    "typescript": "^5.1.6",
    "unplugin-swc": "^1.3.2",
    "vitest": "^0.34.0",
    "zod-prisma": "^0.5.4"
  },
  "prisma": {
    "seed": "ts-node --transpile-only ./prisma/seed.ts"
  },
  "simple-git-hooks": {
    "pre-commit": "npx lint-staged"
  },
  "lint-staged": {
    "*.{[jt]s?(x),json}": [
      "eslint --cache --fix \"{src,apps,libs,test}/**/*.ts\""
    ]
  }
}
